	<script
		src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>

	<script>
		function getSelectTxt(elementId) {

			var val = document.getElementById(elementId);

			if (val.selectedIndex === -1)
				return null;

			return val.selectedIndex;
		}
		function filtrar() {
			if (getSelectTxt("filtro") === 1) {
				$(".card").sort(function(a, b) {
					return a.id >= b.id;
				}).each(function() {
					var elem = $(this);
					elem.remove();
					$(elem).appendTo(".row");
				});
			} else if (getSelectTxt("filtro") === 2) {
				$(".card").sort(function(a, b) {
					return a.id <= b.id;
				}).each(function() {
					var elem = $(this);
					elem.remove();
					$(elem).appendTo(".row");
				});
			} else if (getSelectTxt("filtro") === 3) {
				$(".card").sort(function(a, b) {
					var x = Number(a.title.replace(/[^0-9\.-]+/g, ""));
					var y = Number(b.title.replace(/[^0-9\.-]+/g, ""));
					return x >= y;
				}).each(function() {
					var elem = $(this);
					elem.remove();
					$(elem).appendTo(".row");
				});
			} else if (getSelectTxt("filtro") === 4) {
				$(".card").sort(function(a, b) {
					var x = Number(a.title.replace(/[^0-9\.-]+/g, ""));
					var y = Number(b.title.replace(/[^0-9\.-]+/g, ""));
					return x <= y;
				}).each(function() {
					var elem = $(this);
					elem.remove();
					$(elem).appendTo(".row");
				});
			}
		}
	</script>

